{
  "compileOnSave": true,
  "compilerOptions": {
      "strict": true,
      "module": "ESNext",
      "lib": [
          "ES2020",
          "DOM"
      ],
      "esModuleInterop": true,
      "incremental": false,
      "target": "ES2020",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "build",
      "removeComments": true,
      "sourceMap": false,
      "watch": false,
      "resolveJsonModule": true,
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.cts",
      "src/definitions/bot.ts",
      "config.json"
, "src/Discord/index.mts"  ],
  "exclude": [
      "build",
      "node_modules"
  ]
}